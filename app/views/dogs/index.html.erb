<div class="container">
  <br>
  <h1>All Doggies :</h1>
  <div class="cards">
      <% @dogs.each_with_index do |dog, i| %>
        <div class="card-dog">
          <%= cl_image_tag dog.photo, height: 200, width: 250, crop: :fill %>
          <p>STARS OF THE DOG: <%= dog[:reviews] ? @stars[i] : "no rating yet" %></p>
            <% if current_user %>
              <%= link_to dog.name.upcase, dog_path(dog), class: "links-sessions" %>
            <% else %>
              <%= link_to dog.name.upcase, preview_dog_path(dog), class: "links-sessions" %>
            <%end%>
            <% if policy(dog).edit? %>
              <%= link_to "Edit", edit_dog_path(dog)  %>
            <% end %>
            <% if policy(dog).destroy? %>
              <%= link_to "Delete", dog_path(dog),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this dog?" } %>
            <% end %>
        </div>
      <% end %>
      <% if policy(Dog).new? %>
        <%= link_to "Add a dog", new_dog_path, class: "btn btn-primary"  %>
      <% end %>
  </div>
</div>
