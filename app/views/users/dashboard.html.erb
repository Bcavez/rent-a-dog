<div class="container">
<h1>My Bookings</h1>
<% @bookings.each_with_index do |booking, i| %>

  <% if policy(booking).show? %>

  <div class="card-show">
      <div class= "details">

        <div class= "description">
          <h3>Date:</h3>
          <p><%= booking[:date] %></p>
          <h3>Description:</h3>
          <p><%= booking[:description] %></p>
          <h3>Confirmed:</h3>
          <p><%= booking[:confirmed] ? 'yes' : 'no' %></p>
          <h3>Paid:</h3>
          <p><%= booking[:payed] ? 'yes' : 'no' %></p>
        </div>

        <div class= "book-actions">
        <%= link_to "#{@dogs[i][:name].upcase}'S PROFILE", dog_path(@dogs[i][:id]), class:"btd-yel" %><br><br>
        <% if policy(booking).destroy? %>
          <%= link_to 'DELETE THIS BOOKING', booking_path(booking), method: :delete,
          data: { confirm: "Are you sure?" }, class:"btd-ind" %>
        <% end %>
         <!--<#%= link_to "Renter's profile", user_path(@renter[i][:id]), class:"btd-yel" %>-->
        </div>

      </div>
    </div>
    <%end%>
    <%end%>
  </div>

