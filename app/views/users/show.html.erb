<div class="container">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1 class="text-center">User Profile</h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td rowspan="3"><%= cl_image_tag @user.photo, height: 300, width: 400, crop: :fill %></td>
            <td><%= @user.name %> <%= @user.lastname %></td>
          <tr>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td><%= @user.address %></td>
          </tr>
        </tbody>
      </table>
      <h1 class="text-center">Previous buddies</h1>
    </div>





</div>
