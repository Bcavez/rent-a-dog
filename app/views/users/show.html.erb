<div class="container">
<br><h1>My Profile</h1>
<% if policy(@user).show? %>
   <div class="card-user">
    <%= cl_image_tag @user.photo, crop: :fill, id: "user", gravity: :face %>
      <div class="user-description">
        <h3>
          <%= @user.name %> <%= @user.lastname %>
        </h3>
          <p><%= @user.email %></p>
          <p><%= @user.address %></p>
          <%= link_to 'Add a new dog', new_dog_path, class: "links-sessions" %>
      </div>
    </div>
  <br><br>
  <div class="profile-grid">
    <h3>My Doggies</h3>
    <h3>My Bookings</h3>
  </div>

  <div class="profile-grid">

    <div class="card-user-s">
      <div class="cards">
        <% @dogs.each_with_index do |dog, i| %>
          <div class="card-dog">
            <%= cl_image_tag dog.photo, width: 200, height: 150, crop: :fill %>
            <p>RATING: <%= @stars[i].nil? ? "no rating yet" : @stars[i].round(2) %></p>
            <h3><%= link_to dog[:name].upcase, dog_path(dog), class: "links-sessions" %></h3>
            <%= link_to "EDIT", edit_dog_path(dog), class:"btd-yels"  %>
            <%= link_to "REMOVE", dog_path(dog),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this dog?" }, class:"btd-yels" %>
          </div>
        <% end %>
      </div>
    </div>



    <div class="card-user-s">
      <div class="cards">
        <% @bookings.each do |booking| %>
        <div class="card-dog">
          <h3><%=  booking.dog.name.upcase %></h3>
          <p>Date: <%= booking[:date] %></p>
          <p>Description: <%= booking[:description] %></p>
          <%= link_to 'MORE DETAILS', booking_path(booking), class: "btd-yels" %>
        </div>
        <% end %>
      </div>
    </div>

  </div>

<% end %>
</div>


